<?xml version='1.0' encoding='UTF-8'?>
<profile>
    <name>gabrys.biz</name>
    <language>yaml</language>
    <rules>
        <rule>
            <repositoryKey>common-yaml</repositoryKey>
            <key>DuplicatedBlocks</key>
            <priority>MAJOR</priority>
            <parameters/>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>BracesCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-inside</key>
                    <value>2</value>
                </parameter>
                <parameter>
                    <key>max-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>BracketsCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-inside</key>
                    <value>2</value>
                </parameter>
                <parameter>
                    <key>max-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside-empty</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-inside</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>ColonsCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-after</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>max-spaces-before</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>CommasCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-after</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>max-spaces-before</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>min-spaces-after</key>
                    <value>1</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>CommentsCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>require-starting-space</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>min-spaces-from-content</key>
                    <value>2</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>CommentsIndentationCheck</key>
            <priority>MINOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>DocumentEndCheck</key>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>present</key>
                    <value>false</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>DocumentStartCheck</key>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>present</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>EmptyLinesCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>max</key>
                    <value>1</value>
                </parameter>
                <parameter>
                    <key>max-end</key>
                    <value>0</value>
                </parameter>
                <parameter>
                    <key>max-start</key>
                    <value>0</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>EmptyValuesCheck</key>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>forbid-in-flow-mappings</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>forbid-in-block-mappings</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>HyphensCheck</key>
            <priority>MINOR</priority>
            <parameters>
                <parameter>
                    <key>max-spaces-after</key>
                    <value>1</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>IndentationCheck</key>
            <priority>MINOR</priority>
            <parameters>
                <parameter>
                    <key>check-multi-line-strings</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>spaces</key>
                    <value>2</value>
                </parameter>
                <parameter>
                    <key>indent-sequences</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>KeyDuplicatesCheck</key>
            <priority>MAJOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>LineLengthCheck</key>
            <priority>INFO</priority>
            <parameters>
                <parameter>
                    <key>allow-non-breakable-words</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>max</key>
                    <value>80</value>
                </parameter>
                <parameter>
                    <key>allow-non-breakable-inline-mappings</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>NewLineAtEndOfFileCheck</key>
            <priority>MINOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>OctalValuesCheck</key>
            <priority>MAJOR</priority>
            <parameters>
                <parameter>
                    <key>forbid-implicit-octal</key>
                    <value>true</value>
                </parameter>
                <parameter>
                    <key>forbid-explicit-octal</key>
                    <value>true</value>
                </parameter>
            </parameters>
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>ParsingErrorCheck</key>
            <priority>BLOCKER</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>TrailingSpacesCheck</key>
            <priority>MINOR</priority>
            <parameters />
        </rule>
        <rule>
            <repositoryKey>yaml</repositoryKey>
            <key>TruthyCheck</key>
            <priority>MINOR</priority>
            <parameters />
        </rule>
    </rules>
</profile>